{
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "class-methods-use-this": 0,
        "indent": ["error", 4],
        "prefer-destructuring": 0,
        "no-unused-expressions": 0,
        "consistent-return": 0,
        "import/no-dynamic-require": 0,
        "global-require": 0

    },
    "overrides": [
        {
            "files": ["*Test.js"],
            "rules": {
                "func-names": "off"
            }
        }
    ]
}